<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Student">
	<resultMap id="result" type="Student">
		<result property="id" column="id" />
		<result property="firstName" column="first_name" />
		<result property="lastName" column="last_name" />
	</resultMap>

	<update id="createTable">
		CREATE TABLE public.students(
		id SERIAL NOT NULL
		FOREIGN KEY,
		first_name VARACHAR(50) NOT NULL,
		last_name VARACHAR(50)
		NOT NULL
		);
	</update>
	<insert id="insert" parameterType="Student" useGeneratedKeys="true"
		keyProperty="id">
		INSERT INTO public.students(first_name,last_name)
		VALUES(#{first_name},#{last_name});
	</insert>

	<delete id="delete" parameterType="int">
		DELETE FROM public.students
		WHERE
		id = #{id};
	</delete>

	<update id="update" parameterType="Student">
		UPDATE public.students SET
		first_name=#{first_name}, last_name=#{last_name} WHERE id = #{id};
	</update>

</mapper>