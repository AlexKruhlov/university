<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<servlet>
		<servlet-name>subject</servlet-name>
		<servlet-class>ua.rafael.servlet.subject.SubjectServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>subject</servlet-name>
		<url-pattern>/subjects</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>subject-add</servlet-name>
		<servlet-class>ua.rafael.servlet.subject.SubjectAddServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>subject-add</servlet-name>
		<url-pattern>/subjects/add</url-pattern>
	</servlet-mapping>
</web-app>